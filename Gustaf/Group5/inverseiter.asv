function [rayleigh,i] = inverseiter(A, r,  p)
    bk = randi([0, 100], [size(A, 1), 1]);

    delta = p;
    last = 0;

    i = 0;

    I = eye(size(A, 1));

    while abs(delta) > 10^(-p)
        ck = inv(A - r*I) * bk;
        ck = norm(ck);

        bk = (inv(A - r*I) * bk)/ck;

        rayleigh = rayleighquota(A, bk);
        delta = rayleigh - last;
        last = rayleigh;
        i = i + 1;
    end

end